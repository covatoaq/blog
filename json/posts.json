---
template: ''
---
{
  "name": "posts",
  "total": 20,
  "results": [
    {% for post in collections.post.files | reverse | limit(20) %}
    {
      "title": "{{post.title | escape}}",
      "slug": "{{post.slug | escape}}",
      "date": "{{post.date | date}}",
      "updated": "{{post.updated | date}}",
      "tags": [{% for tag in post.tags %}
        "{{ tag | escape }}"{% if not loop.last%},{% endif %}
      {% endfor %}],
      "excerpt": "{{post.excerpt | striptags | escape}}",
      "readingTime": "{{post.readTime | escape}}"
    }{% if not loop.last%},{% endif %}
    {% endfor %}
  ]
}